{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Allium Common Definitions",
  "$defs": {
    "PascalCaseName": {
      "type": "string",
      "pattern": "^[A-Z][a-zA-Z0-9]*$",
      "description": "PascalCase name for entities, variants, rules, triggers, actors, surfaces"
    },
    "snake_case_name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$",
      "description": "snake_case name for fields, config params, derived values, enum literals"
    },
    "identifier": {
      "type": "string",
      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
      "description": "General identifier (binding names, variable names)"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "scope": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}
